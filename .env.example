# FastAPI Environment Map
ENVIRONMENT=development # or production
PORT=8000
HOST=0.0.0.0

# WhatsApp Cloud API Configuration
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_secure_random_string_here
WHATSAPP_API_TOKEN=your_permanent_or_temporary_whatsapp_graph_api_token
# This is the phone number ID found in your Meta Developer Dashboard
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
# API Version for Meta Graph
WHATSAPP_API_VERSION=v20.0

# Hugging Face LLM Configuration
HF_API_KEY=hf_your_hugging_face_api_token
# Example models: mistralai/Mistral-7B-Instruct-v0.3 or meta-llama/Meta-Llama-3-8B-Instruct
HF_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.3

# (Optional) Database / Logging Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_or_service_key

# (Optional) Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
